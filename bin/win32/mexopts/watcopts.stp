# $Revision: 1.2 $
sub watcopts
{
    my $input = shift;
    my $default_location = "C:\\watcom";

    my $language_handled_fcn = sub {
        my $lang = shift;
        
        return $lang eq "C";
    };

    my $locate_fcn = sub {
        my @watcom_roots = ();

        if ($ENV{'WATCOM'} ne "" &&
            (-e "$ENV{'WATCOM'}\\binnt\\wcc386.exe" ||
             -e "$ENV{'WATCOM'}\\binnt\\wcl386.exe"))
        {
            push(@watcom_roots, $ENV{'WATCOM'});
        }
        
        if (-e "$default_location")
        {
            push(@watcom_roots, $default_location);
        }

        return @watcom_roots;
    };

    my $root_val = sub {
        return shift;
    };

    return {
        "vendor_name"  => "WATCOM C/C++",
        "version"      => "10.6",
        "group_id"     => "WATCOMC",
        "serial"       => 1.0,
        "root_var"     => "WATCOM",
        "optfile_name" => "watcopts.bat",
        "default_location" => $default_location,
        "language_handled" => $language_handled_fcn,
        "root_val"     => $root_val,
        "locate"       => $locate_fcn
        };
}
1;
