# $Revision: 1.2 $
sub lcccompp 
{
    my $input = shift;
    my $default_location = $input->{"matlab_bin"} . "\\..\\..\\sys\\lcc";
    while ($default_location =~ s/\\[^\\.]+\\\.\.//) {}

    my $language_handled_fcn = sub {
        my $lang = shift;
        
        return $lang eq "C";
    };

    my $locate_fcn = sub {
        my @lcc_roots = ();

        if (-e "$default_location")
        {
            push(@lcc_roots, $default_location);
        }

        return @lcc_roots;
    };

    my $root_val = sub {
        return shift;
    };

    return {
        "vendor_name"  => "Lcc C",
        "version"      => "2.4",
        "group_id"     => "LCC",
        "serial"       => 1.0,
        "root_var"     => "NULL",
        "optfile_name" => "lcccompp.bat",
        "default_location" => $default_location,
        "language_handled" => $language_handled_fcn,
        "root_val"     => $root_val,
        "locate"       => $locate_fcn
        };
}
1;
