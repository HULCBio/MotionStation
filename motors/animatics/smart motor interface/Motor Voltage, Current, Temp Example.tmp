' PRINT(#148,"   Temp :           ")
' PRINT(#212,"Pos. Er.:           ")
'RETURN


C1
 WHILE 1
'	GOSUB2					'Get Internal Motor Data
' 	PRINT("VOLTS:  ",UJA/10)		'print volts to display
 	PRINT("     ","CURRENT:  ",UIA)				'print current to display
' 	PRINT(#158,t,"  ")			'print Temperature to display
 	PRINT("     ","PE:  ",@PE,#13)			'Print Position error to display
 LOOP
RETURN

'This Subroutine Gets Internal Motor Port Data 
C2
	j=UJA		'Read Internal Port J (voltage on buss in tenths of volts)     
	k=j/10     	'Pull out decimal
	l=k*10     
	m=j-l      
	i=UIA*10		'Read Internal Port I (Current in tenths of Amps)
	t=TEMP		'Read Internal Temperature Port
RETURN





