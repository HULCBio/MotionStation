# $Revision: 1.3 $
sub bcc54opts 
{
    my $input = shift;
    my $default_location = "C:\\Program Files\\Borland";

    my $language_handled_fcn = sub {
        my $lang = shift;
        
        return $lang eq "C";
    };

    my $locate_fcn = sub {
        my @borland_roots = ();

        if ($ENV{'BORLAND'} && -e "$ENV{'BORLAND'}\\CBuilder4\\bin\\bcc32.exe")
        {
            push(@borland_roots, $ENV{'BORLAND'});
        }

        my $registry_lookup_fcn = $input->{"registry_lookup"};
        my $borland_root = &$registry_lookup_fcn("SOFTWARE\\Borland\\C++Builder\\4.0",
                                                 "RootDir");
        if ($borland_root ne "" && -e "$borland_root")
        {
            $borland_root =~ s/\\CBuilder4$//i;
            push(@borland_roots, $borland_root);
        }

        if (-e "$default_location" && -e "$default_location\\CBuilder4\\bin\\bcc32.exe")
        {
            push(@borland_roots, $default_location);
        }

        return @borland_roots;
    };

    my $root_val = sub {
        return shift;
    };

    return {
        "vendor_name"  => "Borland C++Builder",
        "version"      => "4.0",
        "group_id"     => "BORLANDC",
        "serial"       => 4.0,
        "root_var"     => "BORLAND",
        "optfile_name" => "bcc54opts.bat",
        "default_location" => $default_location,
        "language_handled" => $language_handled_fcn,
        "root_val"     => $root_val,
        "locate"       => $locate_fcn
        };
}
1;
